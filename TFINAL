#include <stdio.h>
#include <string.h>
#include <stdlib.h>

struct Jogador {
    char nome[16];
    int pontuacoes[12];
    int pontuacaoFinal;
};

int compararPontuacoes(const void *a, const void *b) {
    return (*(int*)b - *(int*)a);
}

int compararJogadores(const void *a, const void *b) {
    struct Jogador *jogadorA = (struct Jogador *)a;
    struct Jogador *jogadorB = (struct Jogador *)b;

    if (jogadorB->pontuacaoFinal != jogadorA->pontuacaoFinal) {
        return jogadorB->pontuacaoFinal - jogadorA->pontuacaoFinal;
    }

    return strcmp(jogadorA->nome, jogadorB->nome);
}

int somarPontuacoes(int *pontuacoes, int tamanho) {
    qsort(pontuacoes, tamanho, sizeof(int), compararPontuacoes);
    int soma = 0;
    for (int i = 1; i < tamanho - 1; i++) {
        soma += pontuacoes[i];
    }
    return soma;
}

int main() {
    int J, i, j;
    int teste = 1;

    while (1) {
        printf("Digite o numero de jogadores (0 = sair): ");
        scanf("%d", &J);

        if (J == 0) {
            break;
        }

        struct Jogador jogadores[J];

        for (i = 0; i < J; i++) {
            printf("Digite o nome do jogador %d: ", i + 1);
            scanf("%s", jogadores[i].nome);

            printf("Digite as 12 pontuacoes do jogador %d, separadas por espaco: ", i + 1);
            for (j = 0; j < 12; j++) {
                if(scanf("%d", &jogadores[i].pontuacoes[j]) != 1) {
                    printf("Erro: vocÃª deve digitar exatamente 12 pontuacoes.\n");
                    return 1;
                }
            }

            jogadores[i].pontuacaoFinal = somarPontuacoes(jogadores[i].pontuacoes, 12);
        }

        qsort(jogadores, J, sizeof(struct Jogador), compararJogadores);

        printf("Teste %d\n", teste);
        for (i = 0; i < J; i++) {
            printf("%d %d %s\n", i + 1, jogadores[i].pontuacaoFinal, jogadores[i].nome);
        }

        printf("\n");

        teste++;
    }

    return 0;
}
