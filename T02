#include <stdio.h>
#include <stdbool.h>

bool primo(int num) {
    if (num <= 1) {
        return false;
    }
    for (int i = 2; i * i <= num; i++) {
        if (num % i == 0) {
            return false;
        }
    }
    return (true);
}

void encondecomp(int n) {
    if (n <= 2 || n % 2 != 0) {
        printf("Erro, o numero nao e maior que 2 e/ou e impar.\n");
        return;
    }

    for (int i = 2; i <= n / 2; i++) {
        if (primo(i) && primo(n - i)) {
            printf("%d + %d = %d\n", i, n - i, n);
            return;
        }
    }

}

int main() {
    int num;

    printf("Digite um numero inteiro maior que 2 e par: ");
    scanf("%d", &num);

    encondecomp(num);

    return 0;
}
